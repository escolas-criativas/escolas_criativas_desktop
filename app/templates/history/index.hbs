<ol class="breadcrumb">
  <li>
    {{#link-to "index"}}
      Início
    {{/link-to}}
  </li>
  <li class="active">Práticas pedagógicas</li>
</ol>

<div class="history-findAll">
  <div class="history-findAll-header">
    <div class="page-header">
      <h2 class="hfah-title headline">Práticas pedagógicas</h2>
    </div>

    <div class="history-search">
      <form class="form-inline">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-ls-12">
            <div class="form-group">
              <label for="search-q">Filtro: </label>
              <input
                type="text"
                id="search-q"
                name="q"
                class="form-control"
                placeholder="Buscar no título ou texto ..."
                value=""
              >
            </div>
          </div>
          <div class="seccond-line col-sm-12 col-md-12 col-ls-12">
            <div class="form-group">
              <label>Disciplinas: </label>

              <select name="disciplinas" class="form-control">
                <option value="">Qualquer</option>
                <option value="artes">artes</option>
                <option value="biologia">biologia</option>
                <option value="ciências">ciências</option>
                <option value="ciências sociais">ciências sociais</option>
                <option value="educação artistica">educação artistica</option>
                <option value="educação física">educação física</option>
                <option value="filosofia">filosofia</option>
                <option value="fisica">fisica</option>
                <option value="geografia">geografia</option>
                <option value="história">história</option>
                <option value="inglês">inglês</option>
                <option value="língua portuguesa">língua portuguesa</option>
                <option value="literatura">literatura</option>
                <option value="matemática">matemática</option>
                <option value="música">música</option>
                <option value="quimica">quimica</option>
                <option value="sociologia">sociologia</option>
                <option value="teatro">teatro</option>
              </select>
            </div>

            <div class="form-group">
              <label>Temas: </label>

              <select name="temasTransversais" class="form-control">
                <option value="">Qualquer</option>
                <option value="antropologia">antropologia</option>
                <option value="cidadania">cidadania</option>
                <option value="ciências naturais">ciências naturais</option>
                <option value="comunicação">comunicação</option>
                <option value="cultura de massa">cultura de massa</option>
                <option value="discriminação e preconceito racial">discriminação e preconceito racial</option>
                <option value="diversidade">diversidade</option>
                <option value="economia">economia</option>
                <option value="educação ambiental">educação ambiental</option>
                <option value="ética">ética</option>
                <option value="família">família</option>
                <option value="geologia">geologia</option>
                <option value="gerontologia">gerontologia</option>
                <option value="inclusão/deficiências">inclusão/deficiências</option>
                <option value="meio ambiente">meio ambiente</option>
                <option value="MPB">MPB</option>
                <option value="orientação sexual">orientação sexual</option>
                <option value="orientação sexual">orientação sexual</option>
                <option value="pedagogia">pedagogia</option>
                <option value="pluralidade cultural">pluralidade cultural</option>
                <option value="política">política</option>
                <option value="psicologia">psicologia</option>
                <option value="redação">redação</option>
                <option value="relações de gênero">relações de gênero</option>
                <option value="saúde">saúde</option>
                <option value="sexualidade">sexualidade</option>
                <option value="tecnologias">tecnologias</option>
                <option value="tecnologias da informação">tecnologias da informação</option>
                <option value="temas locais">temas locais</option>
                <option value="trabalho e consumo">trabalho e consumo</option>
              </select>
            </div>

            <div class="form-group">
              <label>Faixa etária: </label>

              <select name="faixaEtaria" class="form-control">
                <option value="">Qualquer</option>
                <option value="a partir de 14 anos">a partir de 14 anos</option>
                <option value="acima de 18 anos">acima de 18 anos</option>
                <option value="de 10 a 14 anos">de 10 a 14 anos</option>
                <option value="de 14 a 18 anos">de 14 a 18 anos</option>
                <option value="de 3 a 7 anos">de 3 a 7 anos</option>
                <option value="de 7 a 10 anos">de 7 a 10 anos</option>
                <option value="todas as idades">todas as idades</option>
              </select>
            </div>
          </div>

          <div class="seccond-line col-sm-12 col-md-12 col-ls-12">
            <div class="form-group">
              <label>Mídia: </label>
              <div class="checkbox">
                <label>
                  <input name="haveImage" type="checkbox"> Imagem
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input name="haveVideo" type="checkbox"> Vídeo
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input name="haveAudio" type="checkbox"> Audio
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input name="haveText" type="checkbox"> Texto
                </label>
              </div>
            </div>

            <div class="form-group">
              <button class="btn btn-default" type="submit">
                <span class="fa fa-search"></span>
              </button>
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="list">
    {{#each model.records as |record|}}
      <div class="d-col">
        {{#link-to "history.item" record.id}}
          <div class="panel panel-default">
            <div class="panel-body">
              {{#if record.featuredImage}}
                {{#each record.featuredImage as |i|}}
                  {{render-image src=i.urls.large alt=record.title class="history-t-featuredImage"}}
                {{/each}}
              {{else}}
                {{#if record.videoThumbnail}}
                  {{render-image src=record.videoThumbnail alt=record.title class="history-t-featuredImage"}}
                {{/if}}
              {{/if}}
              <h2 class="ht-title">{{record.title}}</h2>
              <div class="ht-creator-meta">
                {{#if record.historyDate}}
                  {{we-date record.historyDate}}
                {{/if}}
                - {{record.locationText}}
              </div>

              {{#if record.disciplinas.length}}
                <div class="ht-disciplinas">
                  Disciplina(s): {{we-tags tags=record.disciplinas}}
                </div>
              {{/if}}
              {{#if record.temasTransversais.length}}
                <div class="ht-temasTransversais">
                  Temas transversais(s): {{we-tags tags=record.temasTransversais}}
                </div>
              {{/if}}
              {{#if record.nivel_ensino.length}}
                <div class="ht-nivel_ensino">
                  Nível: {{we-tags tags=record.nivel_ensino}}
                </div>
              {{/if}}
              {{#if record.faixaEtaria.length}}
                <div class="ht-faixetaria">
                  Faixa etária(s): {{we-tags tags=record.faixaEtaria}}
                </div>
              {{/if}}

              <div class="ht-midia">
                Mídia: {{#if record.haveText}}<i class="fa fa-text-width" aria-hidden="true"></i>{{/if}}
                {{#if record.haveImage}}<i class="fa fa-picture-o" aria-hidden="true"></i>{{/if}}
                {{#if record.haveVideo}}<i class="fa fa-video-camera" aria-hidden="true"></i>{{/if}}
                {{#if record.haveAudio}}<i class="fa fa-volume-up" aria-hidden="true"></i>{{/if}}
              </div>

              <div class="ht-creator">
                <h6 class="ht-creator-displayName">{{record.creatorDisplayName}}</h6>
                {{#if record.creatorLocationState}}
                  <span class="ht-creator-location">
                    {{record.creatorLocationState}}
                    {{#if record.creatorCity}} / {{record.creatorCity}}{{/if}}
                  </span>
                {{/if}}
              </div>
            </div>
          </div>
        {{/link-to}}
      </div>
    {{/each}}

  </div>
  <div class="clearfix"></div>
</div>
